#include <iostream>
#include <iomanip>
using namespace std;

int main ()
{
    int index = 0;
    // Pattern : Reverse print
    cout << "------------------- " << index << " --------------------"<<endl ;
    for(int i = 5; i >= 1; --i)
    {
        for(int j=5 ; j >= 1 ; --j)
        {
            //cout <<setw(2)<< i;
            cout <<setw(2)<< j;
        }
        cout << endl ;
    }
    index++;
    cout << "------------------- " << index << " --------------------"<<endl ;

//    char c;
//    for(int i = 'E'; i >= 'A'; --i)
//    {
//        //for(int j= 'E' ; j >= 'A' ; --j)
//        for(int j= 'E' ; j >= i ; --j)
//        {
//            //cout <<setw(2)<< char(j);
//            cout <<setw(2)<< char(i);
//        }
//        cout << endl ;
//    }

//    index++;
//    cout << "------------------- " << index << " --------------------"<<endl ;

    char ii,jj;
    for( ii = 'E'; ii >= 'A'; ii--)
    {
        //for(int j= 'E' ; j >= 'A' ; --j)
        for( jj= 'E' ; jj >= 'A' ; jj--)
        {
            //cout <<setw(2)<< char(j);
            cout <<setw(2)<< char(jj);
        }
        cout << endl ;
    }

   index++;
    cout << "------------------- " << index << " --------------------"<<endl ;


    for( ii = 'E'; ii >= 'A'; ii--)
    {
        //for(int j= 'E' ; j >= 'A' ; --j)
        for( jj= 'E' ; jj >= 'A' ; jj--)
        {
            //cout <<setw(2)<< char(j);
            cout <<setw(2)<< char(ii);
        }
        cout << endl ;
    }

   index++;
    cout << "------------------- " << index << " --------------------"<<endl ;



    for(int i =  1 ; i <= 5; i++)
    {
        for(int j= 1 ; j <= i ; j++)
        {
            // cout <<setw(2)<< " * ";
            cout <<setw(2)<< j;
        }
        cout << endl ;
    }
    index++;

    cout << "------------------- " << index << " --------------------"<<endl ;


    for(int i =  1 ; i <= 5; i++)
    {
        //for(int j= 1 ; j <= 6 - i  ; j++)
        for(int j= 5 ; j >= i ; j--)
        {
            cout <<setw(2)<< " * ";
        }
        cout << endl ;
    }
    index++;

    cout << "------------------- " << index << " --------------------"<<endl ;


    for(int i =  1 ; i <= 5 ; i++)
    {
        //for(int j= 1 ; j <= 6 - i  ; j++)
        for(int j= 5 ; j >= i ; j--)
        {
            cout <<setw(2)<< i;
        }
        cout << endl ;
    }
    index++;

    cout << "------------------- " << index << " --------------------"<<endl ;

    for(int i =  1 ; i <= 5 ; i++)
    {
        for(int j= 1 ; j <= i ; j++)
        {
            cout <<setw(2)<< i;
        }
        cout << endl ;
    }

    cout << "----------------------------------------"<<endl ;
    return 0;
}

